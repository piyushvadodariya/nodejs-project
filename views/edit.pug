extends layout
block content
  .main.container
    .row
        .col-md-6.col-md-offset-3
            ul
                each dat in data
                    div(class="container" )
                        h2 Edit Profile
                            form(action="/editvalue" method="POST")
                                div(class="form-group")
                                    br
                                    label(for="name") Name:
                                    input( type="text" class="form-control" value=dat.name name="name")
                                div(class="form-group")
                                    label(for="email") Email:
                                    input(type="email" class="form-control" id="email" value=dat.email name="email")
                                    input(type="hidden", name="id", value=dat._id)
                                    br
                                    button(type="submit" class="btn btn-default") Submit